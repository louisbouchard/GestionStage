@model GestionStages.ViewModels.MilieuStage.EntrepriseModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Entreprise</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Entreprises.EntrepriseId" />
            <div class="form-group">
                <label asp-for="@Model.Entreprises.NomEntreprise" class="control-label"></label>
                <input asp-for="@Model.Entreprises.NomEntreprise" class="form-control" />
                <span asp-validation-for="@Model.Entreprises.NomEntreprise" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Entreprises.AdresseEntreprise" class="control-label"></label>
                <input asp-for="@Model.Entreprises.AdresseEntreprise" class="form-control" />
                <span asp-validation-for="@Model.Entreprises.AdresseEntreprise" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Entreprises.TypeEntrepriseId" class="control-label"></label>
                <select asp-for="@Model.Entreprises.TypeEntrepriseId" class="form-control" asp-items="ViewBag.TypeEntrepriseId"></select>
                <span asp-validation-for="@Model.Entreprises.TypeEntrepriseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<h1>Types de milieu</h1>

<p>
    <a asp-action="CreateTypeMilieu" asp-route-id="@Model.Entreprises.EntrepriseId">Ajouter un type</a>
</p>
<table class="table">
    <thead>
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.Entreprises)
            </th>*@
            <th>
                Type milieux
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (@Model.Entreprises.EntreprisesTypesMilieuxStage != null)
        {
        @foreach (var item in @Model.Entreprises.EntreprisesTypesMilieuxStage)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Entreprises.NomEntreprise)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TypesMilieuxStage.DescriptionTypeMilieuStage)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditTypeMilieu", new { id = item.EntrepriseTypeMilieuStageId}) |
                    @Html.ActionLink("Delete", "DeleteTypeMilieu", new { id = item.EntrepriseTypeMilieuStageId })
                </td>
            </tr>
        }
        }
    </tbody>
</table>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
